{
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "globals": {
      "ENV": true,
      "glup": true,
      "jQuery": true
    },
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": 1,
      "indent": ["error", 2],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "jsdoc/check-types": 1,
      "jsdoc/no-undefined-types": 2
    },
    "plugins": ["jsdoc"]
  }
  